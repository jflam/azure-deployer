{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        {% for name, value in parameters.items() %}
        "{{ name }}": {
            {% if value is mapping and value.reference is defined %}
            "reference": {
                "keyVault": {
                    "id": "{{ value.reference.keyVault.id }}"
                },
                "secretName": "{{ value.reference.secretName }}"
            }
            {% else %}
            "value": {{ value | tojson }}
            {% endif %}
        }{% if not loop.last %},{% endif %}
        {% endfor %}
    }
}